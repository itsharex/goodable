# Database
DATABASE_URL="file:./data/prod.db"

# Projects Directory (where generated projects are stored)
PROJECTS_DIR="./data/projects"

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-64-char-hex-encryption-key-here"
PORT=3035
WEB_PORT=3033

# Main App Ports
NEXT_PUBLIC_APP_URL="http://localhost:3033"

# Preview Server Port Range (for generated projects)
PREVIEW_PORT_START=3135
PREVIEW_PORT_END=3999

# Log Level (verbose, info, warn, error)
LOG_LEVEL="info"

# Demo Mode Replay Speed (milliseconds)
# Slow speed for keyword-triggered replay (default: 500-1000ms)
DEMO_REPLAY_DELAY_SLOW=500
DEMO_REPLAY_DELAY_SLOW_RANDOM=500
# Fast speed for template-use-triggered replay (default: 167-333ms, about 1/3 of slow)
DEMO_REPLAY_DELAY_FAST=167
DEMO_REPLAY_DELAY_FAST_RANDOM=166
