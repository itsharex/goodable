{
  "name": "electron-sdk-demo",
  "version": "1.0.0",
  "description": "Minimal demo to verify Claude Agent SDK with canUseTool callback",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:bs": "electron main-bs.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:next": "cd next-app && npm run build",
    "pack:bs": "npm run build:next && electron-builder --dir -c electron-builder-bs.yml"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.demo.electron-sdk",
    "productName": "ElectronSDKDemo",
    "asar": true,
    "asarUnpack": [
      "node_modules/@anthropic-ai/claude-agent-sdk/**/*"
    ],
    "mac": {
      "target": "dir"
    },
    "win": {
      "target": "dir"
    }
  }
}
